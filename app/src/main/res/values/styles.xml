<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_4</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/textsize14</item>
    </style>

    <style name="temperature_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_4</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textsize56</item>
    </style>

    <style name="temperature_type_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_4</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textsize28</item>
    </style>

</resources>
