<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dateValue"
            type="String" />

        <variable
            name="tempValue"
            type="String" />

        <variable
            name="feelValue"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            app:cardCornerRadius="@dimen/margin_8"
            app:cardElevation="@dimen/margin_8">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding_8">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_date_value"
                    style="@style/date_style"
                    android:text="@{dateValue}"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="February 18, 2021, 12:45 PM" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_temp_value"
                    style="@style/temperature_style"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="@{tempValue}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date_value"
                    tools:text="28" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_temp_type"
                    style="@style/date_style"
                    android:paddingLeft="@dimen/padding_8"
                    android:paddingTop="@dimen/padding_16"
                    android:text="o"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintStart_toEndOf="@+id/tv_temp_value"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date_value" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_temp_type_value"
                    style="@style/temperature_type_style"
                    android:paddingTop="@dimen/padding_12"
                    android:text="C"
                    app:layout_constraintStart_toEndOf="@+id/tv_temp_type"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date_value" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_feels_like"
                    style="@style/date_style"
                    android:text="@{@string/feels_like(feelValue)}"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_temp_value"
                    tools:text="Feels like 28" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_readMore"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_50"
                    android:src="@drawable/icon_readmore"
                    android:adjustViewBounds="true"
                    app:layout_constraintBottom_toBottomOf="@+id/cl_main"
                    app:layout_constraintRight_toRightOf="@+id/cl_main" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>